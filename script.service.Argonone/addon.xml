<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.argonone"
       name="Argonone service"
       version="1.0.0"
       provider-name="fif81">
  <requires>
    <import addon="xbmc.python" version="3.11.1"/>
    <import addon="virtual.system-tools" version="10.80.11.0" />
    <import addon="virtual.rpi-tools" version="10.80.11.0" />
  </requires>
  <extension point="xbmc.service" library="service.py" />
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <license>GPL-2.0-or-later</license>
    <summary lang="en">service addon supporting argonone case features</summary>
    <summary lang="de">Addon zur Unterstützung der Funktionen des Argonone Gehäuses</summary>
    <source>https://github.com/fif81/Libreelec-Argonone</source>
    <news>v1.0
      Initial release
    </news>
    <assets>
        <icon>resources/icon.png</icon>
        <fanart>resources/fanart.jpg</fanart>
    </assets>
  </extension>
</addon>
